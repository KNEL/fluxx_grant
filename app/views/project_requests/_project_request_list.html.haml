- project = nil unless defined?(:project)
- unless project
  - if params[:project_id]
    - project = Project.find(grab_param(:project_request, :project_id)) rescue nil
%table.tabular{:cellspacing => 0}
  - if project
    %thead
      %tr
        %th
          %span Requests
          .actions= link_to image_tag('/images/fluxx_engine/theme/default/icons/add.png', :class=> 'add-button'), new_project_request_path(:project_request => {:project_id => project.id, :granted => false}), :class => 'to-modal', 'data-is-success' => '.show', 'data-on-success' => 'refreshCaller,close', :title => "link a request"
  %tbody
    - if !models || models.empty?
      %tr
        %td= "No Requests"
    - else
      - models.each do |model|
        %tr
          %td
            = model.request.base_request_id if model.request
            - if current_user.has_delete_for_model? model
              %span.delete-button= link_to image_tag("/images/fluxx_engine/theme/default/icons/delete.png"), project_request_path(model), {:class => 'as-delete', 'data-on-success' => 'refreshCaller'}
