= form.input :program_id, :label => 'Program', :as => :select, :required => false, :collection => Program.all.sort_by{|prog| prog.name}.map {|prog|[prog.name, prog.id]}, :input_html => {:class => 'add-another'}
= form.input :initiative_id, :label => 'Initiative', :as => :select, :required => false, :collection => Initiative.all.sort_by{|prog| prog.name}.map {|prog|[prog.name, prog.id]}, :input_html => {:class => 'add-another'}

= form.input :filter_type, :label => 'Grant Type', :required => false, :as => :select, :collection => [['Grants', GrantRequest.name]], :input_html => {:class => 'add-another'}
= form.input :filter_state, :label => 'Status:', :required => false, :as => :select, :collection => ((Request.grant_states + Request.canceled_states).map{|state|[Request.state_to_english_translation(state), state]}), :input_html => {:class => 'add-another'}


= form.input :lead_user_ids, :label => 'PO/Lead', :required => false, :as => :select, :collection => Program.all_program_users.sort_by{|user| user.full_name.downcase}.map {|user|[user.full_name, user.id]}, :input_html => {:class => 'add-another'}
= form.input :created_by_id, :as => :select, :required => false, :collection => Program.all_program_users.sort_by{|user| user.full_name.downcase}.map {|user|[user.full_name, user.id]}, :input_html => {:class => 'add-another'}
= form.input :funding_source_ids, :label => "Funding Source", :as => :select, :required => false, :collection => FundingSource.all.sort_by{|source| source.name}.map {|source|[source.name, source.id]}, :input_html => {:class => 'add-another'}
Amount Recommended:
= form.input :greater_amount_recommended, :label => 'Greater Than:', :required => false
= form.input :lesser_amount_recommended, :label => 'Less Than:', :required => false
Funding Agreement Date:
= form.input :funding_agreement_from_date, :label => 'From:', :required => false, :input_html => {:class => 'date_field'}, :as => :date
= form.input :funding_agreement_to_date, :label => 'To:', :required => false, :input_html => {:class => 'date_field'}, :as => :date
= form.input :has_been_rejected, :label => 'Include Rejected Requests', :required => false, :as => :boolean, :checked_value => 1, :unchecked_value => ''
= form.input :favorite_user_ids, :label => 'Marked as Favorite', :required => false, :as => :boolean, :checked_value => (current_user ? current_user.id : nil), :unchecked_value => ''
= form.input :sort_attribute, :label => 'Sort Field', :required => false, :as => :select, :include_blank => nil, :collection => [['Last Updated (Default)', 'updated_at'], ['Date Funded', 'grant_agreement_at'], ['Amount', 'amount_requested'], ['Org Name', 'program_org_name'], ['Program', 'program_name']]
= form.input :sort_order, :label => 'Sort Order', :required => false, :as => :select, :include_blank => nil, :collection => [['Descending', 'desc'], ['Ascending', 'asc']]

