- unless FLUXX_CONFIGURATION[:hide_program]
  = form.input :program_id, :label => 'Program', :as => :select, :required => false, :collection => Program.all.sort_by{|prog| prog.name || ''}.map {|prog|[prog.name, prog.id]}, :input_html => {:class => 'add-another'}
- unless FLUXX_CONFIGURATION[:hide_sub_program]
  = form.input :sub_program_id, :label => 'Sub Program', :as => :select, :required => false, :collection => SubProgram.all.sort_by{|prog| prog.name || ''}.map {|prog|[prog.name, prog.id]}, :input_html => {:class => 'add-another'}
= form.input :not_retired, :as => :boolean, :label => "Not Retired"
