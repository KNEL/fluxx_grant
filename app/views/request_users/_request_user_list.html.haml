- model ||= nil
- unless model
  - if params[:request_id]
    - model = BlobStruct.new :id => params[:request_id], :class => Request
%ul
  - models.each do |model|
    %li.relationship{:class=>"action-item"}
      - if current_user.has_delete_for_model? model
        %span.actions= link_to image_tag("/images/fluxx_engine/theme/default/icons/delete.png"), model, {:class => 'as-delete', 'data-on-success' => 'refreshCaller'}
      = image_tag("/images/fluxx_engine/theme/default/card-icons/button_card_people.png", :class=> 'float_left', :width=> '18px')
      = model.user.full_name if model.user
      <br/>
      %p.caption= model.description