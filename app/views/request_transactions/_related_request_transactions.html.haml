- if model.amount_paid
  %span.fluxx-card-content-metadata-section-title= number_to_currency model.amount_paid, :precision => 0
  %span.fluxx-card-content-metadata-section-info
    = model.request.grant_id if model.request
    <br />
    - if model.due_at
      = "Due #{mdy_date_format(model.due_at)}" 
      <br />
    = "Paid #{mdy_date_format(model.paid_at)}"if model.paid_at
- else
  %span.fluxx-card-content-metadata-section-title= number_to_currency model.amount_due, :precision => 0
  %span.fluxx-card-content-metadata-section-info
    = model.request.grant_id if model.request
    <br />
    = "Due #{mdy_date_format(model.due_at)}" if model.due_at