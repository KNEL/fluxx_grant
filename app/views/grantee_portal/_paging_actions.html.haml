- start = (@data.current_page - 1) * @data.per_page + 1
- stop = (@data.current_page - 1) * @data.per_page + @data.count
%span.paging
  = link_to("« Prev", "#", :class => "prev-page #{start > 1 ? '' : 'disabled'}")
  %span= "#{start} - #{stop} of #{@data.total_entries}"
  = link_to("Next »", "#", :class => "next-page #{stop < @data.total_entries ? '' : 'disabled'}")