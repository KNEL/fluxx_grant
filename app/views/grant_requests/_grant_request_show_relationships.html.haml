%h3 
  = "Relationships"
  / %span.actions
  /   - if model && current_user.has_create_for_model?(RequestOrganization)
  /     = render :partial => "request_organizations/organization_add", :locals => { :model => model} 
  /   - if model && current_user.has_create_for_model?(RequestUser)
  /     &nbsp;|&nbsp;
  /     = render :partial => "request_users/user_add", :locals => { :model => model} 
%table.relData{:cellspacing => 0}
  %thead
    %tr
      %th
        = "Organizations: "
        - if model && current_user.has_create_for_model?(RequestOrganization)
          = link_to image_tag("/images/fluxx_engine/theme/default/icons/add.png"), new_request_organization_path(:request_organization => {:request_id => model.id}), :class => 'to-modal', 'data-on-success' => 'refreshNamed,close', 'target' => '.request-org-partial-span', :title => "link an org"
          //= render :partial => "request_organizations/organization_add", :locals => { :model => model}
      %th
        = "People: " 
        - if model && current_user.has_create_for_model?(RequestUser)
          = link_to image_tag("/images/fluxx_engine/theme/default/icons/add.png"), new_request_user_path(:request_user => {:request_id => model.id}), :class => 'to-modal', 'data-on-success' => 'refreshNamed,close', 'target' => '.request-user-partial-span', :title => "link a user"
          //= render :partial => "request_users/user_add", :locals => { :model => model}
  %tbody
    %tr
      %td= render :partial => "request_organizations/list_request_organizations", :locals => { :model => model}
      %td= render :partial => "request_users/list_request_users", :locals => { :model => model}

