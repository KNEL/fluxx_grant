%span.fluxx-card-content-metadata-section-title
  = raw render_program_name(model, false)
  <br />
  = raw render_grant_or_request_id(model)
  <br />
  = raw render_request_or_grant_amount(model, '', '')
  = "|" if !render_request_or_grant_amount(model, '', '').blank?
  = ((model.granted && model.grant_approved_at) ? model.grant_approved_at.mdy : (model.request_received_at ? model.request_received_at.mdy : ''))
  <br />
  = model.state_to_english
%span.fluxx-card-content-metadata-section-info
  - unless model.project_summary.blank?
    <br />
    = model.project_summary