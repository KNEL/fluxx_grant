- program_leads = form.object.program.load_users if form.object.program
= form.input :program_lead, :label => "Program Lead", :as => :select, :collection => program_leads.map{|user| [user.full_name, user.id]}, :input_html => {:class => 'program-lead-select', 'data-param'.to_sym => 'grant_program_ids', 'data-src'.to_sym => users_path(:format => 'json'), 'data-cache'.to_sym => 'program_lead_select'}