- if model.is_a? FipRequest
  %h1= model.fip_title
- else
  %h1= model.org_name_text
%span= [dollars_format(model.granted? ? model.amount_recommended : model.amount_requested), mdy_date_format(model.request_received_at), model.program.name, model.grant_or_request_id].compact.join(' | ')
%p= model.project_summary